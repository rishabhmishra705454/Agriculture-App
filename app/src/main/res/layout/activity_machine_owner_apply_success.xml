<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home.MachineApplication.MachineOwnerApplySuccess"
    android:background="@color/white"
    android:padding="30dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/partner_success_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/close_icon"
        android:padding="5dp"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thanks for\nSubmitting details"
            android:fontFamily="@font/muli_black"
            android:textSize="40sp"
            android:textColor="@color/colorAccent"
            android:textAlignment="center"
            android:layout_marginTop="-80dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAllCaps="true"/>
        


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Our team will contact you\nMake sure your Mobile Number is active"
            android:fontFamily="@font/muli"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:gravity="center"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="home"
            android:onClick="callHomeFromPartnerSuccess"
            android:textColor="@color/white"
            android:fontFamily="@font/muli_bold"
            android:background="@drawable/button_background"
            android:layout_marginTop="30dp"/>




    </LinearLayout>





</LinearLayout>